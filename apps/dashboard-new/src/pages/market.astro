---
import LayoutSidebar from '../app/LayoutSidebar.astro';
import MarketOverview from '../components/MarketOverview';
import QuickStats from '../components/QuickStats';
import TokenSearch from '../components/TokenSearch';
---

<LayoutSidebar>
	<div class="space-y-6">
		<!-- Header -->
		<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
			<div>
				<h1 class="text-2xl font-bold text-white flex items-center gap-2">
					<svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M3 3v18h18M19 9l-5 5-4-4-3 3"/>
					</svg>
					Market Overview
				</h1>
				<p class="text-secondary mt-1">
					Real-time market data and token analytics across all chains
				</p>
			</div>
			<div class="w-full md:w-auto">
				<TokenSearch client:load className="w-full md:w-80" placeholder="Search any token..." />
			</div>
		</div>

		<!-- Quick Stats -->
		<QuickStats client:load />

		<!-- Market Overview -->
		<MarketOverview client:load />

		<!-- Quick Links -->
		<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
			<a 
				href="/trending" 
				class="card-glass p-4 hover:scale-[1.02] transition-all group text-center"
			>
				<div class="w-10 h-10 mx-auto bg-orange-500/20 rounded-xl flex items-center justify-center">
					<svg class="w-6 h-6 text-orange-400" fill="currentColor" viewBox="0 0 24 24">
						<path d="M12 23c-4.97 0-9-3.58-9-8 0-3.19 2.06-6.37 4.06-8.56A.37.37 0 0 1 7.7 6c.16 0 .3.13.36.29.59 1.59 2.07 3.71 3.94 3.71 1.71 0 2.5-1.29 2.5-2.5 0-.7-.28-1.52-.78-2.32a.38.38 0 0 1 .54-.49C17.07 6.78 21 10.34 21 15c0 4.42-4.03 8-9 8z"/>
					</svg>
				</div>
				<p class="text-white font-medium mt-2 group-hover:text-primary transition-colors">Trending</p>
				<p class="text-tertiary text-xs mt-1">Hot tokens</p>
			</a>
			<a 
				href="/watchlist" 
				class="card-glass p-4 hover:scale-[1.02] transition-all group text-center"
			>
				<div class="w-10 h-10 mx-auto bg-yellow-500/20 rounded-xl flex items-center justify-center">
					<svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
						<path d="M12 2L9.19 8.63 2 9.24l5.46 4.73L5.82 21 12 17.27 18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2z"/>
					</svg>
				</div>
				<p class="text-white font-medium mt-2 group-hover:text-primary transition-colors">Watchlist</p>
				<p class="text-tertiary text-xs mt-1">Your tokens</p>
			</a>
			<a 
				href="/launchpads" 
				class="card-glass p-4 hover:scale-[1.02] transition-all group text-center"
			>
				<div class="w-10 h-10 mx-auto bg-purple-500/20 rounded-xl flex items-center justify-center">
					<svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z M12 15l-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/>
					</svg>
				</div>
				<p class="text-white font-medium mt-2 group-hover:text-primary transition-colors">Launchpads</p>
				<p class="text-tertiary text-xs mt-1">New launches</p>
			</a>
			<a 
				href="https://dexscreener.com/new-pairs" 
				target="_blank"
				rel="noopener noreferrer"
				class="card-glass p-4 hover:scale-[1.02] transition-all group text-center"
			>
				<div class="w-10 h-10 mx-auto bg-emerald-500/20 rounded-xl flex items-center justify-center">
					<svg class="w-6 h-6 text-emerald-400" fill="currentColor" viewBox="0 0 24 24">
						<path d="M12 2L9.19 8.63 2 9.24l5.46 4.73L5.82 21 12 17.27 18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2z"/>
					</svg>
				</div>
				<p class="text-white font-medium mt-2 group-hover:text-primary transition-colors">New Pairs</p>
				<p class="text-tertiary text-xs mt-1">Fresh pools</p>
			</a>
		</div>
	</div>
</LayoutSidebar>
