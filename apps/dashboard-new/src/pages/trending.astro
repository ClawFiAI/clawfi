---
import LayoutSidebar from '../app/LayoutSidebar.astro';
import TrendingTokens from '../components/TrendingTokens';
---

<LayoutSidebar>
	<div class="space-y-6">
		<!-- Header -->
		<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
			<div>
				<h1 class="text-2xl font-bold text-white flex items-center gap-2">
					<svg class="w-8 h-8 text-orange-400" fill="currentColor" viewBox="0 0 24 24">
						<path d="M12 23c-4.97 0-9-3.58-9-8 0-3.19 2.06-6.37 4.06-8.56A.37.37 0 0 1 7.7 6c.16 0 .3.13.36.29.59 1.59 2.07 3.71 3.94 3.71 1.71 0 2.5-1.29 2.5-2.5 0-.7-.28-1.52-.78-2.32a.38.38 0 0 1 .54-.49C17.07 6.78 21 10.34 21 15c0 4.42-4.03 8-9 8z"/>
					</svg>
					Trending Tokens
				</h1>
				<p class="text-secondary mt-1">
					Real-time trending tokens from Dexscreener boosts across all chains
				</p>
			</div>
			<div class="flex items-center gap-2">
				<a 
					href="https://dexscreener.com" 
					target="_blank"
					rel="noopener noreferrer"
					class="btn-glass flex items-center gap-2 text-sm"
				>
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
					</svg>
					Dexscreener
				</a>
			</div>
		</div>

		<!-- Info Banner -->
		<div class="card-glass p-4 bg-gradient-to-r from-orange-500/10 to-red-500/10 border-orange-500/20">
			<div class="flex items-start gap-3">
				<div class="flex-shrink-0 w-10 h-10 rounded-lg bg-orange-500/20 flex items-center justify-center">
					<svg class="w-5 h-5 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
					</svg>
				</div>
				<div>
					<h3 class="text-sm font-medium text-white">Boost Intelligence</h3>
					<p class="text-xs text-secondary mt-1">
						Tokens are ranked by their boost count on Dexscreener. Higher boosts indicate more promotional activity. 
						Always DYOR and check token safety before trading.
					</p>
				</div>
			</div>
		</div>

		<!-- Trending Component -->
		<TrendingTokens client:load />
	</div>
</LayoutSidebar>
